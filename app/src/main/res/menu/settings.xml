<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- groups two options to select sort order: most popular and top rated -->
    <group android:id="@+id/sort_order_group"
        app:showAsAction="ifRoom"
        android:menuCategory="container" android:checkableBehavior="single">
        <item
            android:id="@+id/popular_action"
            android:title="@string/popular_movies"
            android:orderInCategory="1"
            android:checked="true"/>
        <item
            android:id="@+id/top_rated_action"
            android:title="@string/toprated_movies"
            android:orderInCategory="2"
            android:checked="false"/>
        <item
            android:id="@+id/favourite_action"
            android:title="@string/favourite_movies"
            android:orderInCategory="2"
            android:checked="false"/>
    </group>


</menu>